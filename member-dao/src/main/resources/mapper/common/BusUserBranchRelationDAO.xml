<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.member.dao.common.BusUserBranchRelationDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gt.common.entity.BusUserBranchRelation">
		<id column="id" property="id" />
		<result column="userid" property="userid" />
		<result column="branchid" property="branchid" />
		<result column="startTime" property="startTime" />
		<result column="createpeople" property="createpeople" />
		<result column="isadmin" property="isadmin" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, userid, branchid, startTime AS startTime, createpeople, isadmin
    </sql>


	<select id="findBusUserShop" resultType="Map">
		select  branchid,poiId from bus_user_branch_relation r left join t_wx_shop sh on r.branchid=sh.id where r.userid=#{busId} and STATUS!=-1
	</select>

</mapper>
