<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.member.dao.common.BusFlowDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gt.common.entity.BusFlow">
		<id column="id" property="id" />
		<result column="bus_id" property="busId" />
		<result column="operate_type" property="operateType" />
		<result column="type" property="type" />
		<result column="count" property="count" />
		<result column="scope" property="scope" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, bus_id, operate_type, type, count, scope
    </sql>

	<select id="getBusFlowsByUserId" resultMap="BaseResultMap"
			parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from t_wx_bus_flow
		where bus_id = #{userId,jdbcType=INTEGER} order by type asc
	</select>

</mapper>
