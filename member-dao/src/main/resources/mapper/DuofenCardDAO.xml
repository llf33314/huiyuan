	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, logo_url AS logoUrl, user_id AS userId, public_id AS publicId, card_id AS cardId, brand_name AS brandName, card_type AS cardType, deal_detail AS dealDetail, cash_least_cost AS cashLeastCost, reduce_cost AS reduceCost, discount, gift, default_detail AS defaultDetail, title, sub_title AS subTitle, color, notice, description, quantity, type, begin_timestamp AS beginTimestamp, end_timestamp AS endTimestamp, fixed_term AS fixedTerm, fixed_begin_term AS fixedBeginTerm, service_phone AS servicePhone, location_id_list AS locationIdList, can_share AS canShare, can_give_friend AS canGiveFriend, least_cost AS leastCost, summary, icon_url_list AS iconUrlList, text_image_list AS textImageList, time_limit AS timeLimit, card_status AS cardStatus, ctime, pass_time AS passTime, isCallSMS, phone, image, timeType, iddelete, dateTimeSet, examine_id AS examineId, addUser
    </sql>



	<select id="findDuofenCard" resultType="Map">
		select
		<include refid="Base_Column_List" />
		from t_duofen_card where user_id=#{busId} and iddelete=0
		<if test="title!=null">
			and title like '%${title}%'
		</if>
		order by id desc
		limit #{firstResult},#{pageSize}
	</select>

	<select id="countDuofenCard" resultType="java.lang.Integer">
		select count(id) from t_duofen_card where user_id=#{busId} and
		iddelete=0
		<if test="title!=null">
			and title like '%${title}%'
		</if>
	</select>

	<select id="findByCardIds" resultType="Map">
		select
		<include refid="Base_Column_List" />
		from t_duofen_card where user_id=#{busId} and id in
		<foreach close=")" collection="cardIds" item="cardId" open="("
				 separator=",">
			#{cardId}
		</foreach>
	</select>

	<select id="findInCardIds" parameterType="map" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" />
		from t_duofen_card where  id in
		<foreach close=")" collection="cardIds" item="cardId" open="("
				 separator=",">
			#{cardId}
		</foreach>
	</select>


	<select id="findByBusId" parameterType="map" resultMap="BaseResultMap">
		select id,title from t_duofen_card where user_id=#{busId} and card_status=2 order by id desc
	</select>

</mapper>
